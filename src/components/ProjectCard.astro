---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
  <a href={`/projects/${project.slug}`}>
    <img 
      src={project.data.mainImage} 
      alt={project.data.title}
      loading="lazy"
      decoding="async"
      class="w-full h-48 object-cover"
    />
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">{project.data.title}</h3>
      <p class="text-gray-600 mb-4">{project.data.description}</p>
      <div class="flex justify-between text-sm text-gray-500">
        <span>{project.data.client}</span>
        <span>{project.data.startDate.toLocaleDateString()}</span>
      </div>
    </div>
  </a>
</article>