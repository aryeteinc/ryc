---
interface Props {
  title?: string;
  subtitle?: string;
  date?: {
    day: string;
    month: string;
    year: string;
  };
  backgroundImage?: string;
}

const {
  title = "Supervisión y",
  subtitle = "Ejecución de Obras",
  date = {
    day: "20",
    month: "ENE",
    year: "2022"
  },
  backgroundImage = "/images/construccion.jpg",
} = Astro.props;
---

<div class="w-full flex">
  <!-- Contenido izquierdo -->
  <div class="w-1/2 relative">
    <!-- Fecha -->
    <div class="absolute top-0 left-0 bg-green-500 p-4 text-white text-center">
      <div class="text-2xl font-bold">{date.day}</div>
      <div class="text-sm">{date.month}</div>
      <div class="text-sm">{date.year}</div>
    </div>

    <!-- Textos -->
    <div class="p-16">
      <h1 class="text-5xl text-green-500 font-light">{title}</h1>
      <h2 class="text-5xl text-zinc-800 font-bold mt-2">{subtitle}</h2>
    </div>
  </div>

  <!-- Imagen derecha -->
  <div class="w-1/2 h-[500px]">
    <img 
      src={backgroundImage} 
      alt="Construcción" 
      loading="lazy"
      decoding="async"
      class="w-full h-full object-cover"
    />
  </div>
</div>